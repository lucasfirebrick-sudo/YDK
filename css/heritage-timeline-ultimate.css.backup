/*
==================================================
河南元达科耐火材料 - 三代传承时间轴终极重设计
工业级专业视觉效果 | 解决遮挡和叙事问题
==================================================
*/

/* =============================================================================
   1. 工业风格设计系统变量
============================================================================= */
:root {
    /* 企业主色调 */
    --primary-red: #c53737;
    --primary-red-dark: #a12929;
    --primary-red-light: #e74c3c;

    /* 工业色彩体系 */
    --industrial-dark: #1a1a1a;
    --industrial-medium: #2d2d2d;
    --industrial-light: #4a4a4a;
    --metal-silver: #c0c0c0;
    --warm-white: #f8f8f8;
    --steel-blue: #34495e;

    /* 文字层级 */
    --text-primary: #2c3e50;
    --text-secondary: #7f8c8d;
    --text-accent: #c53737;
    --text-white: #ffffff;

    /* 间距系统 */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2rem;
    --spacing-xl: 3rem;
    --spacing-xxl: 4rem;

    /* 阴影系统 */
    --shadow-light: 0 2px 8px rgba(0,0,0,0.1);
    --shadow-medium: 0 4px 16px rgba(0,0,0,0.15);
    --shadow-heavy: 0 8px 24px rgba(0,0,0,0.2);
    --shadow-dramatic: 0 12px 40px rgba(197,55,55,0.3);

    /* 边框圆角 */
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-xl: 20px;
}

/* =============================================================================
   2. 时间轴整体容器设计
============================================================================= */
.heritage-timeline {
    position: relative;
    background: linear-gradient(135deg,
        var(--industrial-dark) 0%,
        var(--industrial-medium) 50%,
        var(--industrial-dark) 100%);
    padding: var(--spacing-xxl) 0;
    overflow: hidden;
    margin: var(--spacing-xl) 0;
}

/* 工业纹理背景 */
.heritage-timeline::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background-image:
        radial-gradient(circle at 25% 25%, rgba(197,55,55,0.1) 2px, transparent 2px),
        radial-gradient(circle at 75% 75%, rgba(255,255,255,0.05) 1px, transparent 1px),
        linear-gradient(45deg, rgba(255,255,255,0.02) 50%, transparent 50%);
    background-size: 40px 40px, 20px 20px, 60px 60px;
    pointer-events: none;
    opacity: 0.6;
}

/* 工业装饰元素 */
.heritage-timeline::after {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0;
    height: 4px;
    background: linear-gradient(90deg,
        transparent 0%,
        var(--primary-red) 20%,
        var(--primary-red-light) 50%,
        var(--primary-red) 80%,
        transparent 100%);
    box-shadow: 0 2px 8px rgba(197,55,55,0.5);
}

/* =============================================================================
   3. 时间轴头部设计
============================================================================= */
.timeline-header {
    text-align: center;
    margin-bottom: var(--spacing-xxl);
    position: relative;
    z-index: 10;
}

.heritage-timeline h3 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    margin-bottom: var(--spacing-md);
    position: relative;
    display: inline-block;

    /* 工业风格文字效果 */
    background: linear-gradient(135deg,
        var(--text-white) 0%,
        var(--metal-silver) 25%,
        var(--primary-red-light) 50%,
        var(--text-white) 75%,
        var(--metal-silver) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;

    /* 发光效果 */
    filter: drop-shadow(0 0 10px rgba(197,55,55,0.5));
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
}

.heritage-timeline .section-subtitle {
    font-size: 1.2rem;
    color: rgba(255,255,255,0.8);
    font-style: italic;
    font-weight: 300;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
}

/* =============================================================================
   4. 水平故事线布局系统
============================================================================= */
.timeline-container {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
}

/* 主时间线 - 水平布局 */
.timeline-container::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 5%;
    right: 5%;
    height: 6px;
    background: linear-gradient(90deg,
        transparent 0%,
        var(--primary-red-dark) 10%,
        var(--primary-red) 20%,
        var(--primary-red-light) 50%,
        var(--primary-red) 80%,
        var(--primary-red-dark) 90%,
        transparent 100%);
    border-radius: 3px;
    box-shadow:
        0 2px 8px rgba(197,55,55,0.4),
        0 0 20px rgba(197,55,55,0.2);
    z-index: 1;
    transform: translateY(-50%);
}

/* 时间轴项目容器 - 水平分布 */
.timeline-items-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
    position: relative;
    z-index: 2;
}

/* =============================================================================
   5. 时间轴项目设计
============================================================================= */
.timeline-item {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.timeline-item.animate {
    opacity: 1;
    transform: translateY(0);
}

/* 时间标记器设计 */
.timeline-marker {
    position: relative;
    z-index: 3;
    margin-bottom: var(--spacing-md);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.timeline-year {
    background: linear-gradient(135deg,
        var(--primary-red) 0%,
        var(--primary-red-light) 50%,
        var(--primary-red-dark) 100%);
    color: var(--text-white);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-xl);
    font-weight: 700;
    font-size: 0.95rem;
    margin-bottom: var(--spacing-sm);
    box-shadow: var(--shadow-dramatic);
    border: 2px solid rgba(255,255,255,0.2);

    /* 动画效果 */
    transition: all 0.3s ease;
}

.timeline-year:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 8px 25px rgba(197,55,55,0.5);
}

.timeline-dot {
    width: 20px;
    height: 20px;
    background: var(--text-white);
    border: 4px solid var(--primary-red);
    border-radius: 50%;
    box-shadow:
        0 4px 12px rgba(197,55,55,0.4),
        inset 0 2px 4px rgba(255,255,255,0.8);
    position: relative;
}

.timeline-dot::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 6px;
    height: 6px;
    background: var(--primary-red);
    border-radius: 50%;
    transform: translate(-50%, -50%);
}

/* =============================================================================
   6. 内容卡片设计 - 工业级品质
============================================================================= */
.timeline-content {
    background: linear-gradient(135deg,
        rgba(255,255,255,0.98) 0%,
        rgba(248,249,250,0.95) 100%);
    backdrop-filter: blur(20px);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-heavy);
    width: 100%;
    max-width: 350px;
    position: relative;

    /* 工业边框效果 */
    border: 1px solid rgba(197,55,55,0.2);
    border-top: 3px solid var(--primary-red);

    /* 悬停效果 */
    transition: all 0.4s ease;
}

.timeline-content:hover {
    transform: translateY(-8px);
    box-shadow:
        0 12px 35px rgba(0,0,0,0.15),
        0 0 25px rgba(197,55,55,0.2);
    border-top-color: var(--primary-red-light);
}

/* 内容装饰角标 */
.timeline-content::before {
    content: '';
    position: absolute;
    top: -1px;
    right: var(--spacing-md);
    width: 40px;
    height: 20px;
    background: linear-gradient(135deg, var(--primary-red), var(--primary-red-light));
    clip-path: polygon(0 0, 100% 0, 80% 100%, 20% 100%);
}

/* =============================================================================
   7. 代际信息设计
============================================================================= */
.generation-info {
    margin-bottom: var(--spacing-md);
    border-bottom: 2px solid rgba(197,55,55,0.1);
    padding-bottom: var(--spacing-sm);
}

.generation-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-xs);
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
}

.generation-title::before {
    content: '';
    width: 4px;
    height: 20px;
    background: linear-gradient(180deg, var(--primary-red), var(--primary-red-light));
    border-radius: 2px;
}

.generation-subtitle {
    font-size: 0.9rem;
    color: var(--text-secondary);
    font-weight: 500;
    font-style: italic;
}

/* =============================================================================
   8. 时间轴描述内容
============================================================================= */
.timeline-description {
    line-height: 1.7;
}

.timeline-description p {
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
    font-size: 0.95rem;
}

.timeline-description blockquote {
    background: linear-gradient(135deg,
        rgba(197,55,55,0.05) 0%,
        rgba(197,55,55,0.02) 100%);
    border-left: 4px solid var(--primary-red);
    padding: var(--spacing-sm);
    margin: var(--spacing-sm) 0;
    border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
    font-style: italic;
    color: var(--text-accent);
    font-weight: 500;
    position: relative;
}

.timeline-description blockquote::before {
    content: '"';
    font-size: 2rem;
    color: var(--primary-red);
    position: absolute;
    top: -5px;
    left: var(--spacing-sm);
    font-family: Georgia, serif;
}

/* =============================================================================
   9. 现代特性展示
============================================================================= */
.modern-features {
    margin-top: var(--spacing-md);
    display: grid;
    gap: var(--spacing-sm);
}

.feature-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-xs) var(--spacing-sm);
    background: rgba(197,55,55,0.05);
    border-radius: var(--radius-sm);
    border-left: 3px solid var(--primary-red);
    transition: all 0.3s ease;
}

.feature-item:hover {
    background: rgba(197,55,55,0.1);
    transform: translateX(5px);
}

.feature-item i {
    color: var(--primary-red);
    font-size: 1.1rem;
    width: 20px;
    text-align: center;
}

.feature-item span {
    font-size: 0.9rem;
    color: var(--text-primary);
    font-weight: 500;
}

/* =============================================================================
   10. 总结区域设计
============================================================================= */
.heritage-conclusion {
    margin-top: var(--spacing-xxl);
    text-align: center;
    position: relative;
    z-index: 10;
}

.conclusion-text {
    font-size: 1.3rem;
    color: rgba(255,255,255,0.9);
    font-style: italic;
    font-weight: 400;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
    padding: var(--spacing-lg);
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255,255,255,0.2);
    box-shadow: var(--shadow-medium);
    position: relative;
}

.conclusion-text::before {
    content: '';
    position: absolute;
    top: 0; left: 50%;
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--primary-red), transparent);
    transform: translateX(-50%);
}

/* =============================================================================
   11. 响应式设计
============================================================================= */
@media (max-width: 992px) {
    .timeline-items-container {
        grid-template-columns: 1fr;
        gap: var(--spacing-xl);
    }

    .timeline-container::before {
        top: 0;
        left: 50%;
        right: auto;
        bottom: 0;
        width: 6px;
        height: auto;
        background: linear-gradient(180deg,
            transparent 0%,
            var(--primary-red-dark) 10%,
            var(--primary-red) 20%,
            var(--primary-red-light) 50%,
            var(--primary-red) 80%,
            var(--primary-red-dark) 90%,
            transparent 100%);
        transform: translateX(-50%);
    }

    .timeline-item {
        flex-direction: row;
        text-align: left;
        align-items: flex-start;
    }

    .timeline-marker {
        margin-right: var(--spacing-lg);
        margin-bottom: 0;
        flex-shrink: 0;
    }

    .timeline-content {
        max-width: none;
        flex: 1;
    }
}

@media (max-width: 768px) {
    .heritage-timeline {
        padding: var(--spacing-lg) 0;
    }

    .timeline-container {
        padding: 0 var(--spacing-sm);
    }

    .heritage-timeline h3 {
        font-size: 2rem;
    }

    .timeline-content {
        padding: var(--spacing-md);
    }

    .timeline-item {
        flex-direction: column;
        text-align: center;
        align-items: center;
    }

    .timeline-marker {
        margin-right: 0;
        margin-bottom: var(--spacing-md);
    }
}

/* =============================================================================
   12. 动画和交互效果
============================================================================= */

/* 脉冲动画 */
@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
}

.timeline-year.animate {
    animation: pulse 2s ease-in-out infinite;
}

/* 发光效果 */
@keyframes glow {
    0%, 100% {
        box-shadow: 0 0 5px rgba(197,55,55,0.5);
    }
    50% {
        box-shadow: 0 0 20px rgba(197,55,55,0.8);
    }
}

.timeline-dot:hover {
    animation: glow 1.5s ease-in-out infinite;
}

/* 进入动画延迟 */
.timeline-item:nth-child(1) { transition-delay: 0.2s; }
.timeline-item:nth-child(2) { transition-delay: 0.4s; }
.timeline-item:nth-child(3) { transition-delay: 0.6s; }

/* 悬停时的整体效果 */
.timeline-item:hover .timeline-content {
    border-top-width: 5px;
}

.timeline-item:hover .timeline-year {
    animation: pulse 1s ease-in-out infinite;
}

/* =============================================================================
   13. 可访问性和性能优化
============================================================================= */

/* 减少动画 for users who prefer reduced motion */
@media (prefers-reduced-motion: reduce) {
    .timeline-item {
        transition: opacity 0.3s ease;
    }

    .timeline-year,
    .timeline-dot,
    .feature-item {
        transition: none;
    }

    .timeline-year.animate,
    .timeline-dot:hover {
        animation: none;
    }
}

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
    .heritage-timeline {
        background: #000;
    }

    .timeline-content {
        background: #fff;
        border: 2px solid #000;
    }

    .heritage-timeline h3 {
        background: #fff;
        -webkit-text-fill-color: #000;
        color: #000;
    }
}

/* 触摸设备优化 */
@media (hover: none) and (pointer: coarse) {
    .timeline-content:hover {
        transform: none;
    }

    .feature-item:hover {
        transform: none;
    }

    .timeline-year:hover {
        transform: none;
    }
}